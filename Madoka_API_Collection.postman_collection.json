					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Madoka Kaname\",\n    \"soulGemColor\": \"Pink\",\n    \"weapon\": \"Bow\",\n    \"wish\": \"To save all magical girls from despair\",\n    \"isWitch\": false,\n    \"powerLevel\": 100\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/magicalgirls",
							"host": ["{{baseUrl}}"],
							"path": ["magicalgirls"]
						}
					}
				},
