extends layout

block content
    .mb-6
        span.text-xs.text-gray-400.uppercase.font-medium New Contract
        h1.text-4xl.font-black.uppercase.tracking-tight NEW MAGICAL GIRL
    
    form.bg-white.border-2.border-black(method='post', action='/process')
        .p-4.border-b-2.border-black.flex.flex-col.md_flex-row.md_items-center.gap-2
            label.text-xs.text-gray-400.uppercase.w-32.font-medium(for='name') Name
            input.border-2.border-black.px-3.py-2.flex-1(type='text', name='name', id='name', required)
        
        .p-4.border-b-2.border-black.flex.flex-col.md_flex-row.md_items-center.gap-2
            label.text-xs.text-gray-400.uppercase.w-32.font-medium(for='soulGemColor') Soul Gem
            input.border-2.border-black.px-3.py-2.flex-1(type='text', name='soulGemColor', id='soulGemColor', required)
        
        .p-4.border-b-2.border-black.flex.flex-col.md_flex-row.md_items-center.gap-2
            label.text-xs.text-gray-400.uppercase.w-32.font-medium(for='weapon') Weapon
            select.border-2.border-black.px-3.py-2(name='weapon', id='weapon', required)
                option(value='Bow') Bow
                option(value='Spear') Spear
                option(value='Sword') Sword
                option(value='Gun') Gun
                option(value='Shield') Shield
                option(value='Other') Other
        
        .p-4.border-b-2.border-black.flex.flex-col.md_flex-row.md_items-center.gap-2
            label.text-xs.text-gray-400.uppercase.w-32.font-medium(for='wish') Wish
            input.border-2.border-black.px-3.py-2.flex-1(type='text', name='wish', id='wish')
        
        .p-4.border-b-2.border-black.flex.flex-col.md_flex-row.md_items-center.gap-2
            label.text-xs.text-gray-400.uppercase.w-32.font-medium(for='powerLevel') Power Level
            input.border-2.border-black.px-3.py-2.w-24(type='number', name='powerLevel', id='powerLevel', min=1, max=100, value=10)
        
        .p-4.border-b-2.border-black.flex.items-center.gap-4
            label.text-xs.text-gray-400.uppercase.w-32.font-medium(for='isWitch') Is Witch
            input.w-5.h-5(type='checkbox', name='isWitch', id='isWitch')
        
        .p-4.flex.gap-2
            a.bg-gray-200.px-4.py-2.text-sm.uppercase.font-semibold.hover_bg-gray-300(href='/list') Cancel
            button.bg-pink-500.text-white.px-4.py-2.text-sm.uppercase.font-semibold.hover_bg-black(type='submit') Create
