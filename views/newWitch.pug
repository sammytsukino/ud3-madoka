extends layout

block content
    h1 New witch
    p
        a(href='/list-witches') Back
    form(method='post', action='/process-witch', style="max-width: 20rem;")
        p
            label(for='name') Name
            br
            input(type='text', name='name', id='name', required=true, style="width: 100%; padding: 0.3rem; margin-top: 0.2rem;")
        p
            label(for='barrierType') Barrier type
            br
            select(name='barrierType', id='barrierType', required=true, style="width: 100%; padding: 0.3rem; margin-top: 0.2rem;")
                option(value='Labyrinth') Labyrinth
                option(value='Pocket') Pocket
                option(value='Reality') Reality
                option(value='Other') Other
        p
            label(for='dangerLevel') Danger level
            br
            input(type='number', name='dangerLevel', id='dangerLevel', min=1, max=10, value=5, style="width: 100%; padding: 0.3rem; margin-top: 0.2rem;")
        p
            label(for='defeated')
                input(type='checkbox', name='defeated', id='defeated')
                |  Defeated
        p
            label(for='magicalGirl') Magical girl (optional)
            br
            select(name='magicalGirl', id='magicalGirl', style="width: 100%; padding: 0.3rem; margin-top: 0.2rem;")
                option(value='') â€”
                each mg in magicalgirls
                    option(value=mg._id)= mg.name
        p
            label(for='firstAppearance') First appearance (YYYY-MM-DD)
            br
            input(type='text', name='firstAppearance', id='firstAppearance', placeholder='2020-01-15', style="width: 100%; padding: 0.3rem; margin-top: 0.2rem;")
        p
            button(type='submit', style="background: #6b4c9a; color: #fff; border: none; padding: 0.5rem 1rem; border-radius: 4px; cursor: pointer;") Save
