extends layout

block content
    h1 Magical Girls
    p
        a(href='/new') Add new
        |  ·
        a(href='/index') Home
    if magicalgirls.length == 0
        p No magical girls yet.
    else
        ul(style="list-style: none; padding: 0;")
            each c in magicalgirls
                li(style="background: #ebe0f2; margin: 0.4rem 0; padding: 0.6rem 1rem; border-radius: 4px; border-left: 3px solid #6b4c9a; display: flex; align-items: center; gap: 0.75rem; flex-wrap: wrap;")
                    span #{c.name} — soul gem #{c.soulGemColor}, power #{c.powerLevel}
                    a(href='/view/' + c._id, style="font-size: 0.9rem;") View
                    a(href='/edit/' + c._id, style="font-size: 0.9rem;") Edit
                    form(method='post', action='/view/' + c._id + '/delete', style="display: inline; margin: 0;")
                        button(type='submit', style="background: #8b3a3a; color: #fff; border: none; padding: 0.25rem 0.5rem; border-radius: 4px; cursor: pointer; font-size: 0.9rem;") Delete
