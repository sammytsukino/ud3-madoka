doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= title
        style
            | * { box-sizing: border-box; }
            | body { margin: 0; font-family: Georgia, serif; background: #f5eef8; color: #2d1b4e; line-height: 1.5; min-height: 100vh; padding: 1.5rem; }
            | a { color: #6b4c9a; text-decoration: none; }
            | a:hover { text-decoration: underline; }
            | h1 { color: #4a3073; font-size: 1.5rem; margin-top: 0; border-bottom: 1px solid #c9b8d9; padding-bottom: 0.5rem; }
            | .page { max-width: 42rem; margin: 0 auto; }
    body
        .page
            block content
