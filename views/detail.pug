extends layout

block content
    .mb-6
        span.text-xs.text-gray-400.uppercase.font-medium Contract ##{magicalgirl._id}
        h1.text-4xl.font-black.uppercase.tracking-tight= magicalgirl.name
    
    .flex.gap-2.mb-6
        a.bg-gray-200.px-4.py-2.text-sm.uppercase.font-semibold.hover_bg-gray-300(href='/list') ← Back
        a.bg-black.text-white.px-4.py-2.text-sm.uppercase.font-semibold.hover_bg-pink-500(href='/edit/' + magicalgirl._id) Edit
        form(method='post', action='/view/' + magicalgirl._id + '/delete', style="display:inline;")
            button.bg-red-500.text-white.px-4.py-2.text-sm.uppercase.font-semibold.hover_bg-red-700(type='submit') Delete
    
    .bg-white.border-2.border-black.grid.grid-cols-2.md_grid-cols-3
        .p-4.border-b-2.border-r-2.border-black
            .text-xs.text-gray-400.uppercase.font-medium Soul Gem
            .font-semibold.mt-1= magicalgirl.soulGemColor
        .p-4.border-b-2.border-r-2.border-black
            .text-xs.text-gray-400.uppercase.font-medium Weapon
            .font-semibold.mt-1= magicalgirl.weapon
        .p-4.border-b-2.border-black
            .text-xs.text-gray-400.uppercase.font-medium Power
            .font-semibold.mt-1= magicalgirl.powerLevel
        .p-4.border-b-2.border-r-2.border-black
            .text-xs.text-gray-400.uppercase.font-medium Status
            if magicalgirl.isWitch
                span.bg-red-500.text-white.text-xs.px-2.py-1.uppercase.mt-1.inline-block.font-semibold Corrupted
            else
                span.bg-green-500.text-white.text-xs.px-2.py-1.uppercase.mt-1.inline-block.font-semibold Active
        .p-4.border-b-2.border-black.col-span-2
            .text-xs.text-gray-400.uppercase.font-medium Wish
            .font-semibold.mt-1= magicalgirl.wish || '—'
        .p-4.col-span-3
            .text-xs.text-gray-400.uppercase.font-medium Contract Date
            .font-semibold.mt-1= magicalgirl.contractDate ? new Date(magicalgirl.contractDate).toLocaleDateString() : '—'
