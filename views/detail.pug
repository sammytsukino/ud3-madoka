extends layout

block content
    h1= magicalgirl.name
    dl(style="max-width: 24rem;")
        dt(style="margin-top: 0.5rem; font-weight: bold;") Soul gem color
        dd(style="margin: 0;")= magicalgirl.soulGemColor
        dt(style="margin-top: 0.5rem; font-weight: bold;") Weapon
        dd(style="margin: 0;")= magicalgirl.weapon
        dt(style="margin-top: 0.5rem; font-weight: bold;") Wish
        dd(style="margin: 0;")= magicalgirl.wish
        dt(style="margin-top: 0.5rem; font-weight: bold;") Power level
        dd(style="margin: 0;")= magicalgirl.powerLevel
        dt(style="margin-top: 0.5rem; font-weight: bold;") Is witch
        dd(style="margin: 0;")= magicalgirl.isWitch ? 'Yes' : 'No'
        dt(style="margin-top: 0.5rem; font-weight: bold;") Contract date
        dd(style="margin: 0;")= magicalgirl.contractDate ? new Date(magicalgirl.contractDate).toLocaleDateString() : '—'
    p(style="margin-top: 1rem;")
        a(href='/list') Back to list
        |  ·
        a(href='/edit/' + magicalgirl._id) Edit
        |  ·
        form(method='post', action='/view/' + magicalgirl._id + '/delete', style="display: inline; margin-left: 0.25rem;")
            button(type='submit', style="background: #8b3a3a; color: #fff; border: none; padding: 0.35rem 0.75rem; border-radius: 4px; cursor: pointer;") Delete
