extends layout

block content
    h1 Edit familiar
    p
        a(href='/familiar/' + familiar._id) Back to view
    form(method='post', action='/edit-familiar/' + familiar._id, style="max-width: 20rem;")
        p
            label(for='name') Name
            br
            input(type='text', name='name', id='name', required=true, value=familiar.name, style="width: 100%; padding: 0.3rem; margin-top: 0.2rem;")
        p
            label(for='witch') Witch
            br
            select(name='witch', id='witch', required=true, style="width: 100%; padding: 0.3rem; margin-top: 0.2rem;")
                each w in witches
                    option(value=w._id, selected=(familiar.witch && (familiar.witch._id ? familiar.witch._id.toString() : familiar.witch.toString()) === w._id.toString()))= w.name
        p
            label(for='type') Type
            br
            select(name='type', id='type', required=true, style="width: 100%; padding: 0.3rem; margin-top: 0.2rem;")
                each opt in ['Minion', 'Elite', 'Boss', 'Other']
                    option(value=opt, selected=(familiar.type === opt))= opt
        p
            label(for='strength') Strength
            br
            input(type='number', name='strength', id='strength', min=0, max=100, value=familiar.strength, style="width: 100%; padding: 0.3rem; margin-top: 0.2rem;")
        p
            label(for='isEvolved')
                input(type='checkbox', name='isEvolved', id='isEvolved', checked=familiar.isEvolved)
                |  Evolved
        p
            button(type='submit', style="background: #6b4c9a; color: #fff; border: none; padding: 0.5rem 1rem; border-radius: 4px; cursor: pointer;") Update
