extends layout

block content
    h1 Witches
    p
        a(href='/new-witch') Add new
        |  ·
        a(href='/index') Home
    if witches.length == 0
        p No witches yet.
    else
        ul(style="list-style: none; padding: 0;")
            each w in witches
                li(style="background: #ebe0f2; margin: 0.4rem 0; padding: 0.6rem 1rem; border-radius: 4px; border-left: 3px solid #6b4c9a; display: flex; align-items: center; gap: 0.75rem; flex-wrap: wrap;")
                    span #{w.name} — #{w.barrierType}, danger #{w.dangerLevel}
                    a(href='/witch/' + w._id, style="font-size: 0.9rem;") View
                    a(href='/edit-witch/' + w._id, style="font-size: 0.9rem;") Edit
                    form(method='post', action='/witch/' + w._id + '/delete', style="display: inline; margin: 0;")
                        button(type='submit', style="background: #8b3a3a; color: #fff; border: none; padding: 0.25rem 0.5rem; border-radius: 4px; cursor: pointer; font-size: 0.9rem;") Delete
